{
    "name": "API Development Environment",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:bullseye",
    "remoteEnv": {
        "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}",
        "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
        "AGENTOPS_API_KEY": "${localEnv:AGENTOPS_API_KEY}",
        "BUNDLE_WITHOUT": "production"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-node-azure-pack"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "installOhMyZshConfig": true,
        },

        // "ghcr.io/devcontainers/features/python:1": { "version": "3.10.16" },
        "ghcr.io/devcontainers/features/node:1": { "version": "22.2.0" },
        "ghcr.io/rails/devcontainer/features/ruby": { 
            "version": "3.3.0",
        },
        "ghcr.io/hukaidong/devcontainer/neovim-kickstart:1": { }
        "ghcr.io/hukaidong/devcontainer/kd-utils:1": { }
    },
    "postCreateCommand": "echo 'Development container created successfully!' && bundle install",
    "runArgs": [],
}
